{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist",
		"target": "es5",
		"allowJs": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "src/**/*.stories.tsx", "src/**/*.test.tsx"]
}
